# SCL Backend Configuration - Production Environment

NODE_ENV=production
PORT=5000
SERVER_URL=https://api.sclsandbox.xyz

FRONTEND_URL=https://frontend.sclsandbox.xyz
FRONTEND_DOMAIN=frontend.sclsandbox.xyz

DB_HOST=your_prod_db_host
DB_PORT=3306
DB_NAME=scl_prod
DB_USER=scl_prod_user
DB_PASSWORD=your_strong_prod_password_here
DB_DIALECT=mysql
DB_POOL_MAX=20
DB_POOL_MIN=5

JWT_SECRET=your_jwt_secret_key_min_32_chars_prod_env
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars_prod
JWT_REFRESH_EXPIRY=7d

ENCRYPTION_KEY=32_character_encryption_key_prod_1
ENCRYPTION_IV=16_char_iv_production1

SMTP_HOST=mail.sclsandbox.xyz
SMTP_PORT=587
SMTP_USER=noreply@sclsandbox.xyz
SMTP_PASSWORD=your_strong_smtp_password
SMTP_FROM=noreply@sclsandbox.xyz
SMTP_FROM_NAME=SCL System

FILE_UPLOAD_DIR=/var/www/scl/uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,xls,xlsx

STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
STRIPE_PUBLIC_KEY=pk_live_your_live_public_key
PAYPAL_CLIENT_ID=your_paypal_live_client_id
PAYPAL_CLIENT_SECRET=your_paypal_live_secret

MOODLE_HOST=https://lms.sclsandbox.xyz
MOODLE_CLIENT_ID=scl_prod_app_client_id
MOODLE_CLIENT_SECRET=scl_prod_app_secret
MOODLE_REDIRECT_URI=https://api.sclsandbox.xyz/api/v1/auth/moodle/callback

LOG_LEVEL=warn
LOG_FILE=/var/log/scl/scl-prod.log

RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

CORS_ORIGIN=https://frontend.sclsandbox.xyz
CORS_CREDENTIALS=true

DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

ENABLE_2FA=true
ENABLE_AUDIT_LOG=true
ENABLE_REAL_TIME_SYNC=true
