# Docker Environment Variables
# These will be used by docker-compose.yml

# MySQL Configuration (Docker Container)
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=scl_dev
MYSQL_USER=scl_dev
MYSQL_PASSWORD=scl_dev_password

# Backend Environment
NODE_ENV=development
PORT=5000
DB_HOST=mysql
DB_PORT=3306
DB_USER=scl_dev
DB_PASSWORD=scl_dev_password
DB_NAME=scl_dev
DB_DIALECT=mysql
DB_POOL_MAX=10
DB_POOL_MIN=2

# JWT Configuration
JWT_SECRET=dev-secret-key-12345-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-12345-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# URLs
FRONTEND_URL=http://localhost:3173
SERVER_URL=http://localhost:5000

# phpMyAdmin
PMA_HOST=mysql
PMA_USER=root
PMA_PASSWORD=root
PMA_PORT=3306
