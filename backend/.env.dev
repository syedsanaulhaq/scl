# SCL Backend Configuration - Development Environment

# Server Configuration
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000
DOCKER_MODE=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3173
FRONTEND_DOMAIN=localhost

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=scl_dev
DB_USER=scl_dev
DB_PASSWORD=scl_dev_password
DB_DIALECT=mysql
DB_POOL_MAX=10
DB_POOL_MIN=1

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_dev_only
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars_dev
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=32_character_encryption_key_dev_1
ENCRYPTION_IV=16_char_iv_dev_1

# Email Configuration
SMTP_HOST=mail.sclsandbox.xyz
SMTP_PORT=587
SMTP_USER=noreply@sclsandbox.xyz
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@sclsandbox.xyz
SMTP_FROM_NAME=SCL System

# File Upload
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,xls,xlsx

# Third-Party Services
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Moodle Configuration
MOODLE_HOST=https://lms.sclsandbox.xyz
MOODLE_CLIENT_ID=scl_app_client_id
MOODLE_CLIENT_SECRET=scl_app_secret
MOODLE_REDIRECT_URI=http://localhost:5000/api/v1/auth/moodle/callback

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/scl-dev.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3173
CORS_CREDENTIALS=true

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Feature Flags
ENABLE_2FA=false
ENABLE_AUDIT_LOG=true
ENABLE_REAL_TIME_SYNC=true
